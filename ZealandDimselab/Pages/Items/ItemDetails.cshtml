@page
@model ZealandDimselab.Pages.Items.ItemDetailsModel
@{
}

<!-- COPY FROM UNDER THIS LINE -->
<table class="table table-bordered table-hover table-striped" width="70%">
    @if (HttpContext.User.Identity.Name != null)
    {
        if (HttpContext.User.Identity.Name.Equals("Admin@Dimselab.dk"))
        {
            <p>
                <a class="btn btn-primary" data-toggle="tooltip" title="Add Item" asp-page="CreateItem"><i class="fa fa-plus-square mr-1"></i> Create a new Item </a>
            </p>
            <col style="width: 5%">
            <col style="width: 30%">
            <col style="width: 52%">
            <col style="width: 13%">
        }
        else
        {
            <col style="width: 30%">
            <col style="width: 62%">
            <col style="width: 8%">
        }
    }
    else
    {
        <col style="width: 30%">
        <col style="width: 62%">
        <col style="width: 8%">
    }

    <thead>
        <tr class="btn-secondary active">
            @if (HttpContext.User.Identity.Name != null) // Only shows ID column if logged in as admin
            {
                if (HttpContext.User.Identity.Name.Equals("Admin@Dimselab.dk"))
                {
                    <th>
                        <div class="d-flex justify-content-between p-0">
                            <div><h5>Id</h5></div>
                        </div>
                    </th>
                }
            }
            <th>
                <div class="d-flex justify-content-between p-0">
                    <div><h5>Name</h5></div>
                </div>
            </th>
            <th>
                <div class="d-flex justify-content-between p-0">
                    <div><h5>Description</h5></div>
                </div>
            </th>
            <th>
                <div class="d-flex justify-content-between p-0">
                    <div><h5>Actions</h5></div>
                </div>
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr class="btn-secondary">
                @if (HttpContext.User.Identity.Name != null)
                {
                    if (HttpContext.User.Identity.Name.Equals("Admin@Dimselab.dk"))
                    {
                        <td>
                            @item.Id
                        </td>
                    }
                }
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <ol class="p-0">
                        <li class="list-inline-item">
                            <a class="btn btn-info btn-sm" type="button" data-toggle="tooltip" data-placement="top" title="Details" asp-page="ItemDetails" asp-route-id="@item.Id"><i class="fa fa-search-plus"></i></a>
                        </li>
                        @if (HttpContext.User.Identity.Name != null) // Only shows edit/delete if logged in as admin
                        {
                            if (HttpContext.User.Identity.Name.Equals("Admin@Dimselab.dk"))
                            {
                                <li class="list-inline-item">
                                    <a class="btn btn-warning btn-sm" type="button" data-toggle="tooltip" data-placement="top" title="Edit" asp-page="EditItem" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="btn btn-danger btn-sm" type="button" data-toggle="tooltip" data-placement="top" title="Delete" asp-page="DeleteItem" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                </li>
                            }
                        }
                    </ol>
                </td>
            </tr>
        }
    </tbody>

</table>

<!-- COPY FROM ABOVE THIS LINE -->

<!-- MODAL START -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">@Model.Item.Name</h5>
            </div>

            <div class="modal-body">
                <p><b>Description:</b></p>
                <p style="white-space: pre-line">@Model.Item.Description</p>
            </div>
            <div class="modal-footer">
                <a type="button" class="btn btn-danger" style="width: 10rem" asp-page="Allitems">Close</a>
            </div>
        </div>
    </div>
</div>
<!-- MODAL END -->


@section Scripts
{
    <script src="~/js/showTooltips.js"></script>
    <script src="~/js/showModal.js"></script>
}
